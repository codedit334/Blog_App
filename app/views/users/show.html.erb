<div class="wrapper">
    <div class="userNameWrapper">
        <div><img alt="Profile P."/></div>
        <div class="userName">
            <h2> 
                Name: <%= @user.name %>
            </h2>
            <h6>Number of posts: <%= @user.posts.count%></h6>
        </div>
    </div>
        
    <div class="bio">
        <h3>Bio:</h3>
        <p><%= @user.bio %></p>
    </div>
    


    <ul>
  <% @user.posts.each_with_index do |post, index| %>
    <ul class="post" style="<%= index >= 3 ? 'display:none' : '' %>">
      <%= link_to user_post_path(@user, post), class: 'user-link' do %>
        <h3>Post #<%= index + 1 %></h3>
        <% words = post.text.split %>
        <% if words.length <= 18 %>
          <p><%= post.text %></p>
        <% else %>
          <p><%= words.take(18).join(' ') %>...</p>
        <% end %>
        <div class="count">
          Comments: <%= post.comments.count %> &nbsp;&nbsp;
          Likes: <%= post.likes.count %>
        </div>
      <% end %>
    </ul>
  <% end %>
</ul>

<div class="button">
  <button class="allPosts">See all posts</button>
</div>

<script>
  document.querySelector('.allPosts').addEventListener('click', function() {
    document.querySelectorAll('.post').forEach(function(post) {
      post.style.display = 'block';
    });
    this.style.display = 'none';
  });
</script>

</div>